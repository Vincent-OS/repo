# Maintainer: v38armageddon <contact@v38armageddon.net>
pkgname=ultimtool
pkgver=1.0
pkgrel=1
pkgdesc="Ultimate Tool for tooling with Vincent OS."
arch=(x86_64)
url="https://github.com/Vincent-OS/UltimTool"
license=(GPL-3.0)
groups=()
depends=(
	dotnet-runtime
)
makedepends=(
	dotnet-sdk
)
provides=(
	dotnet-runtime
)
source=(
	${pkgname}::git+https://github.com/Vincent-OS/UltimTool.git
)
validpgpkeys=(
	EE4462B7092CDF3616CDA56D03BC98E28803CA52  # v38armageddon
)

prepare() {
	cd "$pkgname-$pkgver"
}

build() {
	cd "$pkgname-$pkgver"
	cd "src"
	
	echo "Restoring .NET projects..."
	dotnet restore UltimTool.sln
	
	echo "Building UltimTool, this should take a while..."
	dotnet build -c release UltimTool.sln
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
