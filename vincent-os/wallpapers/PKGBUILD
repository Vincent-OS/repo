pkgname=wallpapers
pkgver=1.0
pkgrel=2
pkgdesc="Sets of wallpapers for Vincent OS"
arch=(any)
url="https://github.com/Vincent-OS/wallpaper"
license=('EUPL')
source=("https://github.com/Vincent-OS/wallpaper/releases/download/v1.0/vincent-os-1.0-wallpapers.zip")
sha256sums=('e83c30f9ef66ad409f821bd23a83e54004f648ea722acd2c04204922ea924f2d')

package() {
	mkdir -p "$pkgdir/usr/share/wallpapers/vincent-os-wallpapers"
	cp -r "$srcdir/"* "$pkgdir/usr/share/wallpapers/vincent-os-wallpapers"
}
